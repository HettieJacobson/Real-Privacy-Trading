{
  "name": "real-privacy-trading",
  "description": "Privacy-preserving decentralized trading platform demonstrating FHEVM concepts",
  "version": "1.0.0",
  "license": "BSD-3-Clause-Clear",
  "author": "FHEVM Contributors",
  "keywords": [
    "fhevm",
    "fully-homomorphic-encryption",
    "privacy",
    "blockchain",
    "ethereum",
    "solidity",
    "hardhat",
    "trading"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zama-ai/real-privacy-trading"
  },
  "scripts": {
    "build:vercel": "echo 'Vercel deployment ready - static site with documentation'",
    "clean": "rimraf ./artifacts ./cache ./coverage ./types ./dist",
    "compile": "hardhat compile",
    "test": "hardhat test",
    "coverage": "hardhat coverage",
    "lint": "solhint \"contracts/**/*.sol\"",
    "deploy:localhost": "hardhat deploy --network localhost",
    "deploy:sepolia": "hardhat deploy --network sepolia",
    "verify:sepolia": "hardhat verify --network sepolia"
  },
  "devDependencies": {
    "hardhat": "^2.26.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0"
  },
  "engines": {
    "node": ">=20"
  }
}
